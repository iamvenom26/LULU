<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Backend Development Academy | LULU Learning</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <%- include('./css/backend') %>
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-left">
                <a href="/" class="back-home">
                    <i class="fas fa-home"></i> Back to Home
                </a>
                <div class="logo">LULU Academy</div>
            </div>
            <div class="nav-right">
                <% if (locals.user) { %>
                    <% if (locals.user.role === "ADMIN") { %>
                        <div class="nav-left">
                            <a href="/" class="enroll-btn">ADD Course</a>
                        </div>
                    <% } else { %>
                        <div class="nav-right">
                            <a href="#" class="enroll-btn">Enroll Now</a>
                        </div>
                    <% } %>
                <% } else { %>
                    <div class="nav-left">
                        <a href="/user/signin" class="enroll-btn">Login</a>
                    </div>
                <% } %>
                
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <header class="hero">
        <div class="hero-content">
            <div class="hero-badge">Most Popular Choice 2024</div>
            <h1>Become a Backend Master</h1>
            <p class="hero-subtitle">Join 100,000+ developers who have transformed their careers</p>
            <div class="hero-stats">
                <div class="stat-item">
                    <i class="fas fa-users"></i>
                    <div class="stat-info">
                        <span class="stat-number">100K+</span>
                        <span class="stat-label">Active Students</span>
                    </div>
                </div>
                <div class="stat-item">
                    <i class="fas fa-star"></i>
                    <div class="stat-info">
                        <span class="stat-number">4.8</span>
                        <span class="stat-label">Course Rating</span>
                    </div>
                </div>
                <div class="stat-item">
                    <i class="fas fa-certificate"></i>
                    <div class="stat-info">
                        <span class="stat-number">100%</span>
                        <span class="stat-label">Job Assistance</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Advertisement Banner -->
    <div class="ad-banner">
        <div class="container">
            <div class="ad-content">
                <span class="ad-badge">Limited Time Offer</span>
                <h3>Get 75% Off on All Courses</h3>
                <p>Offer ends in: <span class="countdown">2d 15h 30m</span></p>
            </div>
        </div>
    </div>

    <!-- Course Categories -->
    <div class="course-categories">
        <div class="container">
            <button class="category-btn active">All</button>
            <button class="category-btn">Beginner</button>
            <button class="category-btn">Intermediate</button>
            <button class="category-btn">Advanced</button>
        </div>
    </div>
    <section id="courses" class="courses">
        <div class="container">
            <h2>Trending Frontend Courses</h2>
            <div class="course-grid">
                
                <!-- Dynamic Courses from Database -->
                <% if (courses && courses.length > 0) { %>
                    <% courses.filter(course => course.category === "Backend").forEach(course => { %>
                        <form action="/videos/<%= course._id %>" method="get">
                            <button type="submit" style="all: unset; cursor: pointer; display: block; width: 100%;">
                                <div class="course-card">
                                    <div class="course-image">
                                        <img src="<%= course.coverProfile %>" alt="<%= course.title %>">
                                    </div>
                                    <div class="course-content">
                                        <h3 class="course-title"><%= course.title %></h3>
                                        <p class="instructor"><%= course.authorName %></p>
                
                                        <div class="rating">
                                            <span class="rating-score">4.9</span>
                                            <span class="stars">★★★★★</span>
                                            <span class="rating-count">(18,521)</span>
                                        </div>
                                        <div class="meta-info">
                                            <span>38 hours</span> • <span>450 lectures</span>
                                        </div>
                                        <div class="price-info">
                                            <span class="current-price">₹<%= course.price %></span>
                                            <span class="original-price">₹3,999</span>
                                        </div>
                                        <span class="bestseller-tag">Bestseller</span>
                                    </div>
                                </div>
                            </button>
                        </form>
                    <% }); %>
                <% } else { %>
                    <p>No courses available</p>
                <% } %>
                
    
                <!-- Static React Course -->
                
    
            </div>
        </div>
    </section>

    <!-- Simple Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <p>&copy; 2024 LULU Academy. All rights reserved.</p>
                <div class="footer-links">
                    <a href="#">Terms</a>
                    <a href="#">Privacy policy</a>
                    <a href="#">Cookie settings</a>
                    <a href="#">Sitemap</a>
                </div>
            </div>
        </div>
    </footer>

  
</body>
</html>