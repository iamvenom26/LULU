        /* Root Variables for Color Palette */
:root {
  --primary-bg: #0a192f;        /* Deep midnight blue */
  --accent-color: #112240;      /* Rich dark blue */
  --secondary-accent: #1d3557;  /* Deeper dark blue */
  --highlight-color: #ffffff;   /* Pure white */
  --text-color: #e6f1ff;        /* Soft light blue */
  --background-gradient: linear-gradient(
      135deg, 
      #0a192f 0%, 
      #112240 50%, 
      #1d3557 100%
  );
}

/* Reset and Base Styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Roboto', sans-serif;
  background: var(--background-gradient);
  color: var(--text-color);
  line-height: 1.6;
  overflow-x: hidden;
}

/* Container and Layout */
.container {
  width: 90%;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 15px;
}

/* Header Styles */
header {
  background: var(--primary-bg);
  padding: 4rem 0;
  text-align: center;
  position: relative;
}

.header-content {
  max-width: 800px;
  margin: 0 auto;
  padding: 0 15px;
}

.header-title {
  font-size: 3.5rem;
  font-weight: bold;
  color: var(--highlight-color);
  letter-spacing: 2px;
  margin-bottom: 1rem;
}

.header-subtitle {
  font-size: 1.2rem;
  color: rgba(255, 255, 255, 0.7);
  letter-spacing: 1px;
}

/* Team Section */
.team-section {
  padding: 4rem 2rem;
}

.team-row {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 2rem;
}

.team-card-wrapper {
  flex: 0 0 calc(33.333% - 2rem);
  max-width: 350px;
  margin-bottom: 2rem;
}

.team-card {
  background: var(--accent-color);
  border-radius: 20px;
  overflow: hidden;
  transition: all 0.4s ease;
  height: 100%;
  display: flex;
  flex-direction: column;
  border: 1px solid rgba(255,255,255,0.1);
}

.team-card:hover {
  transform: translateY(-10px);
}

.team-img-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 2rem 0 1rem;
  background: var(--secondary-accent);
}

.team-img {
  width: 200px;
  height: 200px;
  object-fit: cover;
  border-radius: 50%;
  border: 4px solid var(--highlight-color);
  transition: all 0.3s ease;
}

.team-card:hover .team-img {
  transform: scale(1.05);
}

.team-card-body {
  padding: 1.5rem;
  text-align: center;
  flex-grow: 1;
}

.team-member-name {
  font-size: 1.5rem;
  color: var(--highlight-color);
  margin-bottom: 0.5rem;
  text-transform: uppercase;
  letter-spacing: 2px;
}

.team-member-role {
  font-size: 1rem;
  color: rgba(255,255,255,0.7);
  margin-bottom: 1rem;
  font-weight: 300;
}

.team-member-description {
  color: rgba(230, 241, 255, 0.7);
  font-size: 0.9rem;
  line-height: 1.6;
}

.social-icons {
  display: flex;
  justify-content: center;
  gap: 1rem;
  padding: 1rem;
  background: rgba(255,255,255,0.05);
}

.social-btn {
  background: transparent;
  color: var(--highlight-color);
  border: 1px solid rgba(255,255,255,0.2);
  padding: 0.5rem 1rem;
  border-radius: 20px;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  gap: 0.5rem;
  text-decoration: none;
}

.social-btn:hover {
  background: rgba(255,255,255,0.1);
  transform: translateY(-5px);
}

.social-btn i {
  margin-right: 0.5rem;
}

/* Footer Styles */
footer {
  background: var(--primary-bg);
  color: var(--text-color);
  padding: 2rem;
  text-align: center;
}

.footer-social {
  display: flex;
  justify-content: center;
  gap: 1rem;
  margin-top: 1rem;
}

.footer-social a {
  color: var(--highlight-color);
  font-size: 1.5rem;
  transition: color 0.3s ease;
}

.footer-social a:hover {
  color: rgba(255,255,255,0.7);
}

/* Responsive Adjustments */
@media (max-width: 1200px) {
  .team-card-wrapper {
      flex: 0 0 calc(50% - 2rem);
  }

  .header-title {
      font-size: 3rem;
  }
}

@media (max-width: 768px) {
  .team-card-wrapper {
      flex: 0 0 100%;
  }

  .header-title {
      font-size: 2.5rem;
  }

  .header-subtitle {
      font-size: 1rem;
  }
}

/* Accessibility and Print Styles */
@media print {
  body {
      background: white;
      color: black;
  }

  .team-card {
      box-shadow: none;
      border: none;
  }

  .social-icons, .footer-social {
      display: none;
  }
}
