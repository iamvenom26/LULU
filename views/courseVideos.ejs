<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= course.title %></title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        /* General Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #1a1f40;
            color: #ffffff;
            line-height: 1.6;
        }
        .course-module {
            width: 100%;
            margin: 0 auto;
            background-color: #243a5e;
        }
        /* Course Header */
        .course-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 40px;
            background: linear-gradient(135deg, #4976d6, #355ecf);
            height: 350px;
        }
        .header-content {
            max-width: 60%;
            text-align: left;
        }
        .header-content h1 {
            font-size: 36px;
            font-weight: 700;
            margin-bottom: 20px;
        }
        .header-content p {
            font-size: 18px;
            margin-bottom: 20px;
        }
        .header-image img {
            max-width: 300px;
            border-radius: 10px;
        }
        /* Course Content */
        .course-content {
            padding: 30px 40px;
            background-color: #1a1f40;
        }
        .course-content h2 {
            font-size: 28px;
            margin-bottom: 20px;
        }
        .content-item {
            margin-bottom: 20px;
            padding: 15px;
            background-color: #0f1a2e;
            border-radius: 8px;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }
        .content-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }
        .content-item h3 {
            font-size: 20px;
            color: white;
            cursor: pointer;
        }
        .video-container {
            display: none;
            margin-top: 15px;
        }
        .video-container.visible {
            display: block;
        }
        .btn {
            background-color: #4976d6;
            color: #fff;
            padding: 15px 30px;
            border-radius: 8px;
            font-size: 18px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease-in-out;
        }
        .btn:hover {
            background-color: #355ecf;
            box-shadow: 0px 5px 15px rgba(73, 118, 214, 0.3);
        }
    </style>
</head>
<body>
    <div class="course-module">
        <!-- Header Section -->
        <div class="course-header">
            <div class="header-content">
                <h1><%= course.title %></h1>
                <p><%= course.description %></p>
            </div>
            <div class="header-image">
                <img src="server tech img.webp" alt="Course Image">
            </div>
        </div>

        <!-- Course Content Section -->
        <div class="course-content">
            <h2>Course Content</h2>

            <% if (course.videos.length > 0) { %>
                <% course.videos.forEach(video => { %>
                    <div class="content-item">
                        <h3 class="toggle-video">üìΩÔ∏è <%= video.title %></h3>
                        <div class="video-container">
                            <video width="100%" controls>
                                <source src="<%= video.videoUrl %>" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                            <br>
                            <!-- Get Link Button -->
                            <a href="<%= video.videoUrl %>" target="_blank">
                                <button class="btn">Get Link</button>
                            </a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No videos available for this course.</p>
            <% } %>
        </div>
    </div>

    <!-- JavaScript -->
    <script>
        // Toggle Video Visibility
        document.querySelectorAll('.toggle-video').forEach((toggle) => {
            toggle.addEventListener('click', function () {
                const videoContainer = this.nextElementSibling;

                if (videoContainer.classList.contains('visible')) {
                    videoContainer.classList.remove('visible');
                } else {
                    videoContainer.classList.add('visible');
                }
            });
        });
    </script>
</body>
</html>
