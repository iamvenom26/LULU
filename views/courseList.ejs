<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Course List</title>
  <link rel="stylesheet" href="/styles.css" />

  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: #0a192f; /* Solid background color */
      color: #ffffff;
      margin: 0;
      padding: 20px;
      text-align: center;
    }

    /* Top Nav Bar */
    .top-nav {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 30px;
    }

    /* Back to Home Link */
    .back-home {
      color: #dbeafe;
      font-size: 16px;
      text-decoration: none;
      font-weight: bold;
      padding: 10px 15px;
      background: rgba(255, 255, 255, 0.1);
      border-radius: 5px;
      transition: background 0.3s ease;
    }
    .back-home:hover {
      background: rgba(255, 255, 255, 0.2);
    }

    /* Main Title */
    .page-title {
      font-size: 2rem;
      margin: 0;
      letter-spacing: 1px;
    }

    /* Add New Course Button */
    .add-course-btn {
      background: #1e3a8a;
      color: #ffffff;
      border: none;
      padding: 10px 15px;
      border-radius: 5px;
      font-size: 16px;
      text-decoration: none;
      font-weight: bold;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .add-course-btn:hover {
      transform: scale(1.05);
      box-shadow: 0 0 15px rgba(255, 255, 255, 0.3);
    }

    /* Container */
    .container {
      max-width: 1000px;
      margin: 0 auto;
      background: rgba(255, 255, 255, 0.1);
      padding: 25px;
      border-radius: 12px;
      box-shadow: 0 0 20px rgba(255, 255, 255, 0.2);
      backdrop-filter: blur(12px);
    }

    /* Table Styles */
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
      background: rgba(255, 255, 255, 0.1);
      border-radius: 8px;
      overflow: hidden;
    }
    th, td {
      padding: 12px;
      border: 1px solid rgba(255, 255, 255, 0.3);
      text-align: center;
    }
    th {
      background: rgba(255, 255, 255, 0.2);
      font-weight: 600;
    }

    /* Action Buttons */
    .action-btn {
      background: #1e3a8a;
      color: #ffffff;
      padding: 8px 12px;
      border: none;
      cursor: pointer;
      border-radius: 5px;
      font-size: 14px;
      margin: 5px;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .action-btn:hover {
      transform: scale(1.05);
      box-shadow: 0 0 15px rgba(255, 255, 255, 0.3);
    }

    /* Confirm Delete on Table Button */
    form {
      display: inline-block;
    }
  </style>
</head>
<body>

  <!-- Top Nav Bar -->
  <div class="top-nav">
    <a href="/" class="back-home">Back to Home</a>
    <h1 class="page-title">All Courses</h1>
    <a href="/videos/upload" class="add-course-btn">Add New Course</a>
  </div>

  <div class="container">
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Author</th>
          <th>Price</th>
          <th>Category</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% courses.forEach(course => { %>
          <tr>
            <td><%= course.title %></td>
            <td><%= course.authorName %></td>
            <td>â‚¹<%= course.price %></td>
            <td><%= course.category %></td>
            <td>
              
              <form action="/videos/edit/<%= course._id %>" method="get" style="display:inline;">
                <button type="submit" class="action-btn">Edit</button>
              </form>
              <form action="/videos/delete/<%= course._id %>" method="POST" style="display:inline;">
                <button type="submit" class="action-btn" onclick="return confirm('Are you sure you want to delete this course?')">Delete</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>
