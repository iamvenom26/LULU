<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Course List</title>
    <link rel="stylesheet" href="/styles.css"> <!-- Add a CSS file for styling -->
</head>
<body>
    <h1>All Courses</h1>
    <a href="/videos/upload">Add New Course</a> <!-- Link to upload a new course -->

    <table border="1">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Price</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% courses.forEach(course => { %>
                <tr>
                    <td><%= course.title %></td>
                    <td><%= course.authorName %></td>
                    <td>â‚¹<%= course.price %></td>
                    <td><%= course.category %></td>
                    <td>
                        <a href="/videos/edit/<%= course._id %>">Edit</a>
                        <form action="/videos/delete/<%= course._id %>" method="POST" style="display:inline;">
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this course?')">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
